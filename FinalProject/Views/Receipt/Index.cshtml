@model FinalProject.Data.Order
@{
    ViewData["Title"] = "Order " + Model.ID;
}
<div class="container body-content">
    <h2>Order @Model.ID</h2>
    <h3>You purchased:</h3>
    <ul>
        @foreach (var item in Model.OrderItems)
        {
            <li>@item.ProductName : @item.Quantity</li>
        }
    </ul>
    </div>